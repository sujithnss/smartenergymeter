

@model IEnumerable<SmartEnergyMeter.Models.ConsumptionLogViewModel>
@{
    ViewBag.Title = "Consumption Log";
}

@using GridMvc.Html
@{
//ViewBag.Title = "Details";
}

<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>

<br />
<br />
<h2>Consumption Log</h2>
<br />
@if (Model.Count() > 0)
{


    @Html.Grid(Model).Columns(columns =>
{
    columns.Add(c => c.Unit).Titled("Unit").Filterable(false);
    columns.Add(c => c.CreatedDateTime).Titled("Logged Date Time").Filterable(false);
    columns.Add()
    .Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => "");

}).WithPaging(10).Sortable(false)
}
else
{
    <p><h3>No Consumption Logs available</h3> </p>
}

