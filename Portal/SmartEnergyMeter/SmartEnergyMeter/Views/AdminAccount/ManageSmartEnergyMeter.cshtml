

@model IEnumerable<SmartEnergyMeter.Models.SmartEnergyMeterViewModels>
@{
    ViewBag.Title = "Manage Smart Energy Meters";
}

@using GridMvc.Html
@{
//ViewBag.Title = "Details";
}

<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>

<br />
<br />
<h2>Manage Smart Energy Meter</h2>
<br />

<p>
    @Html.ActionLink("Register Smart Energy Meter", "RegisterSmartEnergyMeter", "AdminAccount")
</p>

@if (Model.Count() > 0)
{


    @Html.Grid(Model).Columns(columns =>
{
    columns.Add(c => c.Id).Titled("Id").Filterable(false);
    columns.Add(c => c.CustomerName).Titled("Customer Name").Filterable(false);
    columns.Add(c => c.TariffType).Titled("Tariff Type").Filterable(false);
    columns.Add()
    .Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => "");

}).WithPaging(10).Sortable(false)
}
else
{
    <p><h3>No Smart Energy Meters available</h3> </p>
}

