
@{
    ViewBag.Title = "ConfigureTariif";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model SmartEnergyMeter.Models.TariffViewModels
@{
    ViewBag.Title = "Configure Tariff";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ConfigureTariff", "AdminAccount", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.TOD, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.TOD, ViewData["TOD"].ToString(), new { @class = "form-control", @Value = ViewData["TOD"] })
           
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Normal, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Normal, ViewData["Normal"].ToString(),  new { @class = "form-control", @Value = ViewData["Normal"]})
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Update" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


