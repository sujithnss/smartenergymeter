

@model IEnumerable<SmartEnergyMeter.Models.RegisterCustomerViewModel>
@{
    ViewBag.Title = "Customers";
}

@using GridMvc.Html
@{
//ViewBag.Title = "Details";
}

<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>

<br />
<br />
<h2>List Customers</h2>
<br />
@if (Model.Count() > 0)
{


    @Html.Grid(Model).Columns(columns =>
{
    columns.Add(c => c.Name).Titled("Name").Filterable(false);
    columns.Add(c => c.Email).Titled("Email").Filterable(false);
    columns.Add(c => c.AddressLine1).Titled("Address Line 1").Filterable(false);
    columns.Add(c => c.AddressLine2).Titled("Address Line 2").Filterable(false);
    columns.Add(c => c.PinCode).Titled("Pin Code").Filterable(false);
    columns.Add()
    .Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => "");

}).WithPaging(10).Sortable(false)
}
else
{
    <p><h3>No Customers available</h3> </p>
}

